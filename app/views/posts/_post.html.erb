<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= post.text %>
  </p>

  <p>
    <strong>Comments counter:</strong>
    <%= post.comments_counter %>
  </p>

  <p>
    <strong>Likes counter:</strong>
    <%= post.likes_counter %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>

</div>
